<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"     android:paddingLeft="20dip"
	android:paddingRight="20dip" >
	    
    <Spinner
	    android:id="@+id/new_exp_type_spinner"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:layout_gravity="center_horizontal" />
    
    <EditText
        android:id="@+id/new_exp_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine" 
        android:text="@string/new_expense_description" >
    </EditText>
            
    <Button 
    	android:id="@+id/new_exp_date_button"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:text="@string/new_expense_pick_date" 
    	android:onClick="showDatePickerDialog" />
    
    <EditText
        android:id="@+id/new_exp_amount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_expense_amount"
        android:inputType="numberDecimal" >
        
    </EditText>
    
    <Button 
    	android:id="@+id/new_expense_save_button"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:text="@string/new_expense_save_button" />

</LinearLayout>